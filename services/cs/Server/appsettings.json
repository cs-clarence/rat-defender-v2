{
    "Urls": "http://*:5177",
    "ConnectionStrings": {
        "RatDefender": "Data Source=rat-defender.db.sqlite;Pooling=False"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "RatDefender.Infrastructure.Iot": "Information"
        }
    },
    "AllowedHosts": "*",
    "Slices": {
        "RatDefender": {
            "Domain": {
                "Services": {
                    "RatDetector": {
                        "MinimumConfidence": 0.70,
                        "MinimumTemperatureCelsius": 35,
                        "MaximumTemperatureCelsius": 40,
                        "DetectThermalBeforeObjectDetection": true
                    }
                }
            },
            "Infrastructure": {
                "Iot": {
                    "ThermalImager": {},
                    "Buzzer": {},
                    "FoodDispenser": {},
                    "DetectionUartSmsNotifier": {
                        "PortName": "/dev/ttyS2",
                        "MessageFormat": "We have detected {{count}} rat(s) at {{time}}. Please take action.",
                        "Recipients": [
                            {
                                "CountryCode": 63,
                                "LocalNumber": 9350834123
                            }
                        ]
                    }
                },
                "ObjectDetection": {
                    "RatDetectionImageProcessor": {
                        "DetectRats": true,
                        "VideoCaptureApi": "V4l2"
                    }
                }
            }
        }
    },
    "Mocks": {
        "ThermalImager": false,
        "FoodDispenser": false,
        "Buzzer": false,
        "RatDetectionImageProcessor": false,
        "DetectionNotifier": false
    }
}
