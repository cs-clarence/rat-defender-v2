{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "envMode": "loose",
    "globalEnv": ["DATABASE_URL", "MIGRATION_DEV_DATABASE_URL", "BUILD_ARCH"],
    "tasks": {
        "check": {
            "dependsOn": ["^check"]
        },
        "pre-build": {
            "cache": true
        },
        "build": {
            "dependsOn": ["pre-build", "^build", "codegen"],
            "inputs": ["./src/*"],
            "outputs": [
                "./dist/*",
                "./bin/*",
                "./output/*",
                "./build/*",
                "./obj/*"
            ]
        },
        "codegen": {
            "dependsOn": ["^build"],
            "inputs": ["./src/*"]
        },
        "cleanup": {},
        "schema:apply": {
            "inputs": ["./schemas/*", "./atlas.hcl"],
            "env": ["DATABASE_URL", "MIGRATION_DEV_DATABASE_URL"],
            "cache": false
        },
        "schema:clean": {
            "cache": false
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "interactive": true
        }
    }
}
